<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:hapticFeedbackEnabled="false"
    android:textAlignment="center">

    <EditText
        android:id="@+id/edName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="224dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edit_field_background"
        android:backgroundTintMode="add"
        android:ems="10"
        android:fontFamily="@font/open_sans_medium"
        android:includeFontPadding="false"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textColorHint="#8C000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="-8dp"
        android:background="@color/white"
        android:fontFamily="@font/open_sans_regular"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Аты-жөніңіз:"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/edName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edName"
        app:layout_constraintTop_toTopOf="@+id/edName" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/button_start"
        android:textColor="@color/white"
        android:textColorHint="#fff"
        android:textColorLink="#fff"
        android:textSize="18sp"
        android:onClick="onClickNextPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:hapticFeedbackEnabled="false"
    android:textAlignment="center">

    <EditText
        android:id="@+id/edName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="243dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edit_file_deactivate_background"
        android:backgroundTintMode="add"
        android:ems="10"
        android:fontFamily="@font/open_sans_medium"
        android:hint="@string/first_page_hint_name"
        android:includeFontPadding="false"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="-8dp"
        android:background="@color/white"
        android:fontFamily="@font/open_sans_regular"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/first_page_text_name"
        android:textColor="#666666"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edName"
        app:layout_constraintTop_toTopOf="@+id/edName" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="139dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/open_sans_semibold"
        android:onClick="onClickNextPage"
        android:text="@string/button_start"
        android:textColor="@color/white"
        android:textColorHint="#fff"
        android:textColorLink="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEmail" />

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edit_file_deactivate_background"
        android:ems="10"
        android:hint="@string/first_page_hint_gmail"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textColorHighlight="#888888"
        android:textColorHint="#888888"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edName" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="-8dp"
        android:background="@color/white"
        android:fontFamily="@font/open_sans_regular"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/first_page_text_gmail"
        android:textColor="#666666"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edEmail"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="@+id/edEmail"
        app:layout_constraintTop_toTopOf="@+id/edEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>